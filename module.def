# OpenPanel OpenAppUser.module for user management
# ============================================================================
module OpenAppUser					< uuid 2dd1a7b4-c37d-423c-a0a3-90f3a8f78601
								< version 1.0
								< languages en_EN
								< apitype commandline
								< getconfig true
								< license GPLv3
								< author OpenPanel
								< url http://www.openpanel.com/
	
# ============================================================================
# CLASSES
# ============================================================================
class User						< uuid b2af3521-805d-49f1-95b8-720ffde5383b
								< version 1
								< indexing manual
								< uniquein class
								< shortname user
								< singleton openpanel-admin
								< title User
								< description System/OpenPanel user
								< sortindex 10
								< icon user.png
							
								< capabilities update
								< listview id emailaddress
								< required id password emailaddress

	string id					: Username
								< example openpanel-admin
								< textwidth 16
								
	password password			: Password
								< crypt md5
								< textwidth 16
								< example sPswd13t
								< regexp [:password:]
								
	string emailaddress			: Email address
								< regexp [:email:]
								< textwidth 45
								< example john@acme.example.net
								

# ----------------------------------------------------------------------------
class OpenCORE:System			< uuid f5ab1775-56a3-42d2-9853-7fdc13709003
								< version 1
								< indexing manual
								< singleton system
								< shortname opencore
								< title System
								< description OpenCORE System Information
								< sortindex 100
								< icon system.png
	
	string id					: id < flags required
	string version				: Build version < flags visible
	string buildhost			: Build host < flags visible < clihide true
	string builddate			: Build date < flags visible
	string grace				: Grace library version < flags visible
	
								
# ----------------------------------------------------------------------------
class OpenCORE:ActiveSession	< uuid 37b77a2a-fe61-4d37-a604-ee003512111e
								< version 1
								< requires OpenCORE:System
								< indexing auto
								< shortname session
								< title Sessions
								< description Active opencore session
								< sortindex 120
								< gridheight 150
								< emptytext No active sessions
								
								< capabilities admin
								
	string id					: Session-id < gridwidth 40
	string user					: User < gridwidth 15
	string origin				: Origin < gridwidth 43


# ----------------------------------------------------------------------------
class OpenCORE:ErrorLog			< uuid a11a6b9d-78d1-4dc4-8c0a-9f6f25a24617
								< version 1
								< requires OpenCORE:System
								< indexing auto
								< shortname errorlog
								< title Error Log
								< description Server side error log
								< sortindex 110
								< gridheight 275
								< explanation errorlog.html
								< emptytext No errors.
								
								< capabilities admin
	
	string id					: id < flags enabled
	string time					: When < gridwidth 20
	string subsystem			: Component < gridwidth 15
	string message				: Message < gridwidth 63


# ----------------------------------------------------------------------------
class OpenCORE:ClassList		< uuid f1aa6d01-807a-43df-b650-1186a36a2ecf
								< version 1
								< requires OpenCORE:System
								< indexing manual
								< shortname classlist
								< title Classes
								< description Loaded OpenCORE classes
								< sortindex 130
								< gridheight 250
								
	string id					: Class
								< cliwidth 16
								< gridwidth 25
								
	string module				: Module
								< cliwidth 20
								< gridwidth 25
								
	string description			: Description < gridwidth 35
	integer version				: Version
								< clihide true
								< gridwidth 8
	
	string apitype				: API Type
								< clihide true
								< gridhide true
								
	string license				: License
								< clihide true
								< gridhide true
								
	string author				: Author
								< clihide true
								< gridhide true
								
	string url					: Site
								< clihide true
								< gridhide true
								
	string shortname			: Short (CLI) name
								< clihide true
								< gridhide true


# ============================================================================
# ENUMS
# ============================================================================
enum language
	value en_EN 				: English
	value nl_NL					: Nederlands
	value fr_FR					: Francais
	value de_DE					: Deutsch

# ============================================================================
# AUTHD
# ============================================================================
authd commandclasses
	commandclass user

authd fileops
	match preferences.xml		: /etc/openpanel
								< user root
								< group openpanel-core
								< perms 0640
