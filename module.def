# OpenPanel OpenAppUser.module for user management
# ============================================================================
module OpenAppUser					< uuid 2dd1a7b4-c37d-423c-a0a3-90f3a8f78601
								< version 1.0
								< languages en_EN
								< apitype commandline
								< getconfig true
								< license GPLv3
								< author OpenPanel
								< url http://www.openpanel.com/
	
# ============================================================================
# CLASSES
# ============================================================================
class User						< uuid b2af3521-805d-49f1-95b8-720ffde5383b
								< version 1
								< indexing manual
								< uniquein class
								< shortname user
								< singleton openpanel-admin
								< title OpenApp admin
								< description System/OpenPanel user
								< sortindex 10
								< icon user.png
							
								< capabilities update
								< listview id emailaddress
								< required id password emailaddress

	string id					: OpenApp Username
								< example openpanel-admin
								< textwidth 16
								
	password password			: OpenApp Password
								< crypt md5
								< textwidth 16
								< example sPswd13t
								< regexp [:password:]
								
# ----------------------------------------------------------------------------
class OpenCORE:Quota                    < uuid 34789832-e1bd-441d-9ffc-193c6364b9d7
                                                                < version 1
                                                                < requires User
                                                                < indexing manual
                                                                < uniquein parent
                                                                < shortname quota
                                                                < title Quota
                                                                < description Quota information
                                                                < sortindex 20
                                                                < gridheight 275
								< guihide true
                                                                
                                                                < capabilities update
        
        string id                                       : Resource
                                                                < flags visible
                                                                < gridhide true
                                                                
        string description                      : Description
                                                                < flags visible
                                                                < gridwidth 41
                                                                
        string units                            : Unit 
                                                                < flags visible
                                                                < gridwidth 13
                                                                
        integer usage                           : Usage
                                                                < flags visible
                                                                < gridwidth 7
                                                                
        integer quota                           : Quota
                                                                < flags enabled visible
                                                                < gridwidth 7
                                                                < textwidth 3

# ============================================================================
# AUTHD
# ============================================================================
authd commandclasses
	commandclass user
